<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:id="@+id/orderlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_respicture"
                android:layout_width="30dp"
                android:focusable="false"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/dlt2"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/item_resname"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_respicture"
                android:layout_toEndOf="@+id/item_respicture"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="click"
                android:text="丁老头"
                android:focusable="false"

                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="订单已完成"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/confirm_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_alignParentRight="true"
                android:background="@color/nocolor"
                android:text="确认送达"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="2017-12-08 12:00"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="dish"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="￥"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="right">

            <TextView
                android:id="@+id/order_again"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/nocolor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:text="再来一单"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/comment_bn"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/nocolor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:text="评价"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>